<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/head', {title: 'Login | Inktale'}) %>
</head>
<body>
    <section class="section form-section">
        <div class="container">
            <div class="form-card">
                <div class="card-header">
                    <a href="/" class="logo">
                        <img src="/images/logo-light.svg" width="163" height="40" alt="Inktale" class="light">
                        <img src="/images/logo-dark.svg" width="163" height="40" alt="Inktale" class="dark">
                    </a>
                    <p class="body-large text-on-surface-variant">
                        Join the inktale community
                    </p>
                </div>
                <form action="" class="form" data-form>
                    <div class="text-field-wrapper">
                        <label for="email" class="body-large label">Email</label>
                        <input type="email" name="email" id="email" autocomplete="email" placeholder=" " required class="body-large text-field">
                    </div>
                    <div class="text-field-wrapper">
                        <label for="password" class="body-large label">Password</label>
                        <input type="password" name="password" id="password" placeholder=" " minlength="8" required class="body-large text-field">
                    </div>
                    <button type="submit" class="btn btn-fill" data-submit-btn>
                        <p class="label-large">Sign in</p>
                        <div class="state-layer"></div>
                    </button>
                </form>
                <div class="card-footer">
                    <p class="label-large">Don't have an account?</p>
                    <a href="/register" class="label-large text-primary">Create account</a>
                </div>
            </div>
        </div>
    </section>

    <!--
    #SNACKBAR
    -->
    <div class="stackbar-wrapper" data-snackbar-wrapper></div>
</body>
<script type="module" src="/js/login.js"></script>
</html>